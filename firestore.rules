
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Functions to check user roles
    function isOwner(businessId) {
      return request.auth != null && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
    }

    function isEmployee(businessId, userId) {
      return request.auth != null && exists(/databases/$(database)/documents/businesses/$(businessId)/employees/$(userId));
    }
    
    // Rule for the connection test - allow any authenticated user
    match /test_connection/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Users can create and manage their own profile
    match /users/{userId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Business Rules
    match /businesses/{businessId} {
      // Owner can do anything to their business document
      allow read, write: if isOwner(businessId);
      
      // Employees can read the business document
      allow read: if isEmployee(businessId, request.auth.uid);

      // Branch Rules
      match /branches/{branchId} {
        // Owner has full access to branches
        allow read, write: if isOwner(businessId);
        // Employees of the business can read the branch documents
        allow read: if isEmployee(businessId, request.auth.uid);

        // Rules for all subcollections within a branch (items, recipes, etc.)
        match /{subcollection}/{docId} {
          // Owner has full access.
          // Employees assigned to this specific branch have full access.
          allow read, write: if isOwner(businessId) || 
                              (isEmployee(businessId, request.auth.uid) && get(/databases/$(database)/documents/businesses/$(businessId)/employees/$(request.auth.uid)).data.branchId == branchId);
        }
      }
      
      // Employee Management Rules
      match /employees/{employeeId} {
        // Owner can read and write (add/edit/delete) employees
        allow read, write: if isOwner(businessId);
        // An employee can read their own employee record
        allow read: if request.auth.uid == employeeId;
      }
    }
  }
}
