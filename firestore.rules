
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rule for the connection test
    match /test_connection/{docId} {
      allow read, write: if true;
    }
    
    // Users can only manage their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Businesses can be created by any authenticated user
    match /businesses/{businessId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;

      // Rules for all subcollections within a business
      match /{allPaths=**} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
      }
    }
  }
}
