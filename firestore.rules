
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(businessId) {
      return request.auth != null && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
    }

    // For now, we will say an employee of a business can read all branch data.
    // A more complex app might check for specific branch assignments.
    function isEmployee(businessId) {
       // This is a placeholder for future employee logic. 
       // For now, we are just checking if the user is authenticated.
      return request.auth != null;
    }
    
    match /users/{userId} {
      // Users can create and manage their own profile.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /businesses/{businessId} {
      // The owner can do anything.
      allow read, write: if isOwner(businessId);
      
      // An employee can read the main business document.
      allow get: if isEmployee(businessId);

      // Rule for all subcollections within a business (e.g., branches, employees)
      match /{subcollection}/{docId} {
        // The owner has full read and write access to all subcollections.
        allow read, write: if isOwner(businessId);
      }
    }
  }
}
