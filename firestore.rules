
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rule for the connection test - allow any authenticated user
    match /test_connection/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Users can create and manage their own profile
    match /users/{userId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Businesses can be read by their owner.
    // Businesses can be created if the ownerId matches the user.
    match /businesses/{businessId} {
      allow read: if request.auth != null && resource.data.ownerId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      // The owner of the business can update or delete it
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;

      // The owner of a business can create, read, update, and delete branches.
      match /branches/{branchId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
        
        // The owner of the business can manage items in a branch
        match /items/{itemId} {
            allow read, write: if request.auth != null && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
        }

        // The owner of the business can manage recipes in a branch
        match /recipes/{recipeId} {
            allow read, write: if request.auth != null && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
        }

        // All other subcollections can only be accessed if the parent business exists and is owned by the user.
        match /{path=**} {
          allow read, write: if request.auth != null && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
        }
      }
    }
  }
}
