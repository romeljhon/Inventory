
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(businessId) {
      return request.auth != null && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
    }

    // Checks if a user is listed as an employee for a specific business.
    function isEmployee(businessId) {
      return request.auth != null && exists(/databases/$(database)/documents/businesses/$(businessId)/employees/$(request.auth.uid));
    }
    
    match /users/{userId} {
      // Users can create and manage their own profile.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /businesses/{businessId} {
      // The owner can do anything with the business document itself.
      allow read, write: if isOwner(businessId);
      
      // An employee can read the main business document.
      allow get: if isEmployee(businessId);
      
      match /employees/{employeeId} {
        // The business owner can manage employees.
        allow read, write: if isOwner(businessId);
      }

      // This rule applies to all subcollections (branches, items, recipes, etc.)
      // within a business, recursively.
      match /{subcollection=**} {
        // The owner has full read and write access to all subcollection documents.
        // Employees have read access to all subcollection documents for now.
        allow read, write: if isOwner(businessId);
        allow get, list: if isEmployee(businessId);
      }
    }
  }
}
